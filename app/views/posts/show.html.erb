<h1>Posts#show</h1>
<div class="panel panel-default">
    <div class="panel-heading">
    <h2><%= @post.title %></h2>
        <div class="panel-body">
        <p><%= @post.content %></p>
        <p>Category: <%= @post.category.area %></p>
        <p><%=link_to "That scared me!", like_post_path(@post), method: :patch %> <%=@post.get_upvotes.size%> | 
           <%=link_to "Not scary!", dislike_post_path(@post), method: :patch %> <%=@post.get_downvotes.size%> 
        </div>
    </div>
</div>
<% if @post.comments.any? %> 
    <p>Comments: <%=@post.comments.count%></p>
    <%= render @post.comments %> 
<%end%>
<%= render "comments/form" %>
<%= link_to "Home", posts_path %>

