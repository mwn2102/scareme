<h1>Search Results</h1>
<h3><%=link_to "Submit your scare story", new_post_path %></h3>
<div class="row">
<div class="col-md-8">
<%if @posts.blank? %>
<p>No results found.<p>
<%end%>
<ul>
    <%@posts.each do |post| %>
    <li><%=link_to post.title, post%></li>
    <li>Created by <%=post.user.name%> on <%=post.created_at.strftime("%B %d, %Y")%> at <%=post.created_at.strftime('%r')%> </li>
    <li>Category: <%=post.category.area%></li>
    <li><%=post.user.name%></li>
    <li>Scary <%=post.get_upvotes.size%> | Not Scary <%=post.get_downvotes.size%> | Comments: <%=post.comments.count%></li>
    <% if current_user == post.user %>
        <li>
            <%=link_to "Edit", edit_post_path(post) %> |
            <%=link_to "Delete", post_path(post), method: :delete %> 
        </li>  
    <%end%>
    <%end%>
<ul>
<%= will_paginate @posts %>
</div>
</div>

